<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<project basedir="." default="build-jar" name="TP1">
	<property name="debuglevel" value="source,lines,vars" />
	<path id="FileSystem.classpath">
		<pathelement location="bin" />
		<fileset dir="${ant.home}/lib" includes="*.jar" />
	</path>
	<target name="init">
		<mkdir dir="bin" />
		<copy includeemptydirs="false" todir="bin">
			<fileset dir="src">
				<exclude name="**/*.java" />
			</fileset>
		</copy>
	</target>
	<target name="clean">
		<delete dir="bin" />
		<delete file="server.jar" />
		<delete file="client.jar" />
		<delete file="shared.jar" />
	</target>
	<target depends="init" name="build-class">
		<javac debug="true" debuglevel="${debuglevel}" destdir="bin" includeantruntime="false">
			<src path="src" />
			<classpath refid="FileSystem.classpath" />
		</javac>
	</target>
	<target depends="build-class" name="build-jar">
		<jar destfile="shared.jar" basedir="bin" includes="shared/**" update="false" />
		<jar destfile="server.jar" basedir="bin" includes="server/**" update="false" />
		<jar destfile="client.jar" basedir="bin" includes="client/**" update="false" />
	</target>
	<target name="test">
		<junit printsummary="yes" haltonfailure="no">
			<classpath refid="FileSystem.classpath" />
			<!-- test class -->
			<classpath location="test/" />
			<test name="test/" />
		</junit>
	</target>
</project>
